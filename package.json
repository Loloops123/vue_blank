{
  "name": "vue_template",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite --host",
    "storybook": "storybook dev -p 6006",
    "test:unit": "vitest run",
    "test:storybook": "vitest run --config .storybook/vitest.config.ts",
    "lint:oxlint": "oxlint . --fix -D correctness --ignore-path .gitignore",
    "lint:eslint": "eslint . --fix --cache",
    "lint:types": "vue-tsc --build",
    "lint:commit": "commitlint --edit",
    "lint:all": "run-s lint:*",
    "build:dev": "vite build",
    "build:ci": "pnpm lint:types && vite build",
    "storybook:build": "storybook build -o ./dist-storybook --quiet --test",
    "prettier:format": "prettier --write .",
    "knip": "knip",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{ts,mts,tsx,vue}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,html,css}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "pinia": "^3.0.4",
    "vue": "^3.5.25",
    "vue-router": "^4.6.3"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.2.0",
    "@commitlint/config-conventional": "^20.2.0",
    "@iconify/json": "^2.2.421",
    "@prettier/plugin-oxc": "^0.0.5",
    "@prettier/plugin-xml": "^3.4.2",
    "@storybook/addon-a11y": "^10.1.10",
    "@storybook/addon-docs": "^10.1.10",
    "@storybook/addon-vitest": "^10.1.10",
    "@storybook/vue3-vite": "^10.1.10",
    "@tailwindcss/vite": "^4.1.18",
    "@tsconfig/node24": "^24.0.3",
    "@types/eslint-plugin-security": "^3.0.0",
    "@types/node": "^24.10.1",
    "@vitejs/plugin-vue": "^6.0.2",
    "@vitest/browser-playwright": "^4.0.14",
    "@vitest/coverage-v8": "^4.0.14",
    "@vitest/eslint-plugin": "^1.5.0",
    "@vue/eslint-config-prettier": "^10.2.0",
    "@vue/eslint-config-typescript": "^14.6.0",
    "@vue/test-utils": "^2.4.6",
    "@vue/tsconfig": "^0.8.1",
    "eslint": "^9.39.1",
    "eslint-plugin-oxlint": "~1.29.0",
    "eslint-plugin-security": "^3.0.1",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-storybook": "^10.1.10",
    "eslint-plugin-unicorn": "^62.0.0",
    "eslint-plugin-unused-imports": "^4.3.0",
    "eslint-plugin-vue": "~10.5.1",
    "happy-dom": "^20.0.11",
    "husky": "^9.1.7",
    "jiti": "^2.6.1",
    "knip": "^5.77.1",
    "lint-staged": "^16.2.7",
    "npm-run-all2": "^8.0.4",
    "oxlint": "~1.29.0",
    "playwright": "^1.57.0",
    "prettier": "3.6.2",
    "prettier-plugin-packagejson": "^2.5.20",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "storybook": "^10.1.10",
    "tailwindcss": "^4.1.18",
    "typescript": "~5.9.0",
    "unplugin-icons": "^22.5.0",
    "vite": "^7.2.4",
    "vite-plugin-vue-devtools": "^8.0.5",
    "vitest": "^4.0.14",
    "vue-tsc": "^3.1.5"
  },
  "engines": {
    "node": "^20.19.0 || >=22.12.0"
  }
}
